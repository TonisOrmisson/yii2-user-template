{
    "name": "tonisormisson/yii2-user-template",
    "description": "Yii 2 Basic Project Template implementing Yii2-user",
    "keywords": ["yii2", "framework", "basic", "project template"],
    "homepage": "http://www.yiiframework.com/",
    "type": "project",
    "license": "BSD-3-Clause",
    "minimum-stability": "stable",

    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],

    "require": {
        "php": ">=7.4.0",
        "yiisoft/yii2": "~2.0.5",
        "yiisoft/yii2-bootstrap": "~2.0.0",
        "yiisoft/yii2-symfonymailer": "~2.0.0",

        "2amigos/2fa-library": "^1.0",
        "2amigos/qrcode-library": "^1.1",

        "2amigos/yii2-selectize-widget": "^1.1",
        "yiisoft/yii2-authclient": "^2.1",
        "yiisoft/yii2-httpclient": "^2.0",
        "auth0/auth0-php": "^7.4",
        "lajax/yii2-language-picker": "^1.2",
        "yiisoft/yii2-bootstrap4": "^2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.3",
        "squizlabs/php_codesniffer": "*",
        "phpmd/phpmd": "@stable",
        "yiisoft/yii2-debug": "~2.1.0",
        "codeception/verify": "^0.3.3",
        "codeception/codeception": "*",
        "roave/security-advisories": "dev-master",
        "codeception/module-filesystem": "^1.0",
        "codeception/module-yii2": "^1.1",
        "codeception/module-asserts": "^1.1",
        "codeception/module-db": "^1.0"
    },
    "config": {
        "platform": {
            "php": "7.4.0"
        },

        "process-timeout": 1800,
        "fxp-asset": {
            "enabled": false
        },
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    },

    "scripts": {
        "post-create-project-cmd": [
            "yii\\composer\\Installer::postCreateProject"
        ]
    },
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "runtime": "0777",
                    "web/assets": "0777",
                    "yii": "0755"
                }
            ],
            "generateCookieValidationKey": [
                "config/web.php"
            ]
        },
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}
